= form_tag(patients_path, :method => "get", id: "search-form") do 
  .row
    .col-md-4
      = text_field_tag :search, params[:search], placeholder: "Ingrese Nombre", class: "form-control"
    .col-md-1
      = submit_tag "Buscar", class:  "btn btn-default"
    .col-md-4
      -unless @patients.present? 
        %b No hay registros con el nombre: 
        = params[:search]

