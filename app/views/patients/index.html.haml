%h1 Listing patients
%td= current_user.role
%h2= current_user.name

%td= link_to 'New Patient', new_patient_path, class:  "btn btn-small btn-info"
%table.table.table-bordered
  %thead
    %tr
      %th Name
      %th Age
      %th Identification
      %th Modality
      -if current_user.role != "radiologist"
        %th Catheter
        %th Caliber
      -if current_user.role != "nurse"
        %th qualitative_scale
      /%th
      /%th
      /%th

  %tbody
    - @patients.each do |patient|
      %tr
        %td= patient.name
        %td= patient.age
        %td= patient.identification
        %td= patient.modality
        -if current_user.role != "radiologist" 
          %td= patient.catheter
          %td= patient.caliber
        -if current_user.role != "nurse"
          %td= patient.qualitative_scale
        %td= link_to 'Show', patient
        %td= link_to 'Edit', edit_patient_path(patient)
        -if current_user.role == "admin" 
          %td= link_to 'Destroy', patient, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
