= simple_form_for(@patient) do |f|
  = f.error_notification
  %td= current_user.role

  -if current_user.role == "radiologist"
    %p
      %b Nombre:
      = @patient.name
    %p
      %b Edad:
      = @patient.age
    %p
      %b Identificación:
      = @patient.identification
    %p
      %b Modalidad:
      = @patient.modality
    .form-inputs
      .row
        .col-md-4
          = f.input :qualitative_scale, collection: [ "No evaluable", "No es óptimo", "Aceptable", "Óptimo"], label: 'Escala cualitativa'

  -elsif current_user.role == "nurse"
    .form-inputs

      = f.input :name, label: 'Nombre'
      .row
        .col-md-4
          = f.input :age, label: 'Edad'
        .col-md-4
          = f.input :identification, label: 'Identificación'
      .row
        .col-md-4
          %p
            %b Modalidad:
            = @patient.modality
        .col-md-4
          %p
            %b Catéter:
            = @patient.catheter
        .col-md-4
          %p
            %b Calibre:
            = @patient.caliber
      .row
        .col-md-4
          = f.input :number_punctures, label: 'Número de Punciones' 
        .col-md-4
          = f.input :catheter_exchange, label: 'Cambio de Catéter' 
          
  -else   
    .form-inputs
      = f.input :name, label: 'Nombre'
      .row
        .col-md-4
          = f.input :age, label: 'Edad'
        .col-md-4
          = f.input :identification, label: 'Identificación'
      .row
        .col-md-4
          %p
            %b Modalidad:
            = @patient.modality
        .col-md-4
          %p
            %b Catéter:
            = @patient.catheter
        .col-md-4
          %p
            %b Calibre:
            = @patient.caliber
      .row
        .col-md-4
          = f.input :number_punctures, label: 'Número de Punciones' 
        .col-md-4
          = f.input :catheter_exchange, label: 'Cambio de Catéter' 
      .row
        .col-md-4
          = f.input :qualitative_scale, collection: [ "No evaluable", "No es óptimo", "Aceptable", "Óptimo"], label: 'Escala cualitativa'


  .form-actions
    = f.button :submit
